{
  "compileOnSave": true,
  "include": [
    "retriever",
    "config",
    "types",
    "actions",
    "index.ts",
    "constants",
    "interfaces",
    "utilities",
  ],
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "types": ["jest", "node"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  }
}
